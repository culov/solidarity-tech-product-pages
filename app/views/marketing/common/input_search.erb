<label class="input">
    <% if defined?(labelText) %>
      <span class="input__label">
        <%= labelText %><%= defined?(required) ? '*' : ''%>
      </span>
    <% end %>
    <div class="search-input">
      <button
        class="search-input__button"
        <%= defined?(disabled) ? 'disabled=disabled' : ''%>
      >
        <%= render template: 'marketing/common/icon', :locals => {
          iconName: 'ui_magnifying_glass',
          iconClass: 'search-input__button-icon'
        } %>
        <span class="search-input__button-text">Search</span>
      </button>
      <input
        type="<%= defined?(type) ? type : 'text' %>"
        placeholder=" <%= defined?(placeholder) ? placeholder : '' %>"
        name="<%= defined?(name) ? name : '' %>"
        <%= defined?(required) ? 'required=required' : ''%>
        <%= defined?(disabled) ? 'disabled=disabled' : ''%>
        class="input__field search-input__field"
        />
    </div>
    <% if defined?(comment) %>
        <span class="input__comment">
          <%= comment %>
        </span>
    <% end %>
</label>