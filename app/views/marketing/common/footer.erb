<footer class="wrap footer">
    <div class="content footer__content">
        <div class="footer__top">
            <div class="footer__logo">
                <%= render template: 'marketing/components/logotype' %>
                <p class="footer__logo-description"><%= Mock::FOOTER[:description] %></p>
            </div>


            <div class="footer-menu">
                <% Mock::FOOTER[:links].each do |item| %>
                    <div class="footer-menu__item">
                        <h4 class="footer-menu__item-name"><%= item[:name] %></h4>
                        <ul class="footer-menu__submenu">
                            <% item[:sublinks].each do |link| %>
                                <li><a class="footer-menu__submenu-link" href="<%= link[:path] %>"><%= link[:name] %></a></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
            </div>
        </div>

        <div class="footer__button">
            <span class="footer__copyright"><%= Mock::FOOTER[:copyright] %></span>
            <ul class="footer__social">
                <% Mock::FOOTER[:social].each do |link| %>
                    <li>
                      <a class="footer__social-link" href="<%= link[:path] %>">
                        <%= render template: 'marketing/common/icon', :locals => { :iconName => link[:icon], :iconClass => 'footer__social-link-icon' } %>
                      </a>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</footer>