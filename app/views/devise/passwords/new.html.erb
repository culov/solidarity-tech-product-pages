
<title>Reset Password - Solidarity Tech</title>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
 <%= csrf_meta_tags %>
<script type="text/javascript">
	$(function(){


		$('form').on('submit', function(e){
			 // alert('a')
			e.preventDefault();
			// e.stopPropagation();
			$(".btn.btn-primary").addClass("disabled").attr("disabled", true);
			$.post("/users/password/reset", {email: $("#user_email").val()}, function(response){
				$(".row.hidden").removeClass("hidden");
				$(".btn.btn-primary.submit").remove();
				$("#user_email").attr("disabled", true)
			});

			return false;
		});
	});
</script>

  <%= render "devise/shared/error_messages", resource: resource %>


   <div class="col-lg-8 col-md-10 col-sm-8 col-xs-10 col-xs-offset-1 col-sm-offset-1 col-md-offset-2 col-lg-offset-2">

<form data-toggle="validator" role="form" id="my_form">
   	<div class="row">
   		<h2>Forgot your password?</h2>
   	</div>
   	<div class="row">
   		<p style="font-size: 16px;">Enter your email address below and we'll send you an email with instructions on how to reset your password.</p>
   	</div>


   	<div class="row">
      <div class="form-group">
        
      
          <input class="form-control" placeholder="Email"  type="email" name="user[email]" id="user_email" required data-error="Please enter a valid email address" required>
          <div class="help-block with-errors"></div>
       </div>
   </div>
 

       <div class="row">
	       <div class="form-group">
	        

	          <button type="submit" class="btn btn-primary submit" data-show-loading-on-click>Submit</button>
	       
	      </div>
	  </div>

	  <div class="row hidden">
	  	<p style="font-size: 20px;">If an account at your email exists, we sent you instructions on how to reset your password.</p>
	  </div>
</form>
  </div>











